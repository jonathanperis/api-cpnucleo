@inject IOptions<ApplicationConfigurations> OptionsApplicationConfiguration

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@OptionsApplicationConfiguration.Value.NomeSistema - @ViewData["Title"]</title>
    <!-- Mainly links -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/font-awesome/css/font-awesome.css" rel="stylesheet">
    @RenderSection("styles", required: false)
</head>
<body class="top-navigation">
    <div id="wrapper">
        <div id="page-wrapper" class="gray-bg">
            <div class="row border-bottom white-bg">
                <nav class="navbar navbar-static-top" role="navigation">
                    <div class="navbar-header">
                        <button aria-controls="navbar" aria-expanded="false" data-target="#navbar" data-toggle="collapse" class="navbar-toggle collapsed" type="button">
                            <i class="fa fa-reorder"></i>
                        </button>
                        <div class="navbar-brand">@OptionsApplicationConfiguration.Value.NomeSistema</div>
                    </div>
                    <div class="navbar-collapse collapse" id="navbar">
                        <ul class="nav navbar-nav">
                            <li>
                                <a aria-expanded="false" role="button" asp-page="/Apontamento">Apontamentos</a>
                            </li>
                            <li>
                                <a aria-expanded="false" role="button" asp-page="/FluxoTrabalho">Fluxo de Trabalho</a>
                            </li>
                            <li class="dropdown">
                                <a aria-expanded="false" role="button" href="#" class="dropdown-toggle" data-toggle="dropdown"> Gerenciar <span class="caret"></span></a>
                                <ul role="menu" class="dropdown-menu">
                                    <li><a asp-page="/Sistema/Listar">Relação de Sistemas</a></li>
                                    <li><a asp-page="/Impedimento/Listar">Relação de Impedimentos</a></li>
                                    <li><a asp-page="/Recurso/Listar">Relação de Recursos</a></li>
                                    <li><a asp-page="/Projeto/Listar">Relação de Projetos</a></li>
                                    <li><a asp-page="/Workflow/Listar">Relação de Workflow</a></li>
                                    <li><a asp-page="/Tarefa/Listar">Relação de Tarefas</a></li>
                                </ul>
                            </li>
                        </ul>
                        <ul class="nav navbar-top-links navbar-right">
                            <li>
                                <a asp-page="/Login" asp-page-handler="Logout">
                                    <i class="fa fa-sign-out"></i> Sair
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <div class="wrapper wrapper-content">
                <div class="container">
                    @RenderBody()
                </div>
            </div>
            <div class="footer">
                <div>
                    <strong>Copyright</strong> &copy; @DateTime.Now.Year <a href="https://peris-studio.azurewebsites.net/" target="_blank">Jonathan Peris</a>, todos os direitos Reservados.
                </div>
            </div>
        </div>
    </div>
    <!-- Mainly scripts -->
    <script src="~/js/jquery-3.1.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <!-- Custom and plugin javascript -->
    <script src="~/js/inspinia.js"></script>
    <script src="~/js/plugins/pace/pace.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>