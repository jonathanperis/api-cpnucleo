@page "{idImpedimentoTarefa:int}"
@model ImpedimentoTarefa.RemoverModel
@{
    ViewData["Title"] = "Remoção de Impedimento (Tarefa)";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>@ViewData["Title"]</h5>
            <div class="ibox-tools">
                <a class="fullscreen-link">
                    <i class="fa fa-expand"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <form method="post" class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="ImpedimentoTarefa.IdImpedimentoTarefa"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="ImpedimentoTarefa.IdImpedimentoTarefa">
                        <p class="form-control-static">@Html.DisplayFor(x => x.ImpedimentoTarefa.IdImpedimentoTarefa)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="ImpedimentoTarefa.IdTarefa"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="ImpedimentoTarefa.IdTarefa">
                        <p class="form-control-static">@Html.DisplayFor(x => x.ImpedimentoTarefa.Tarefa.Nome)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="ImpedimentoTarefa.Descricao"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="ImpedimentoTarefa.Descricao">
                        <p class="form-control-static">@Html.DisplayFor(x => x.ImpedimentoTarefa.Descricao)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="ImpedimentoTarefa.IdImpedimento"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="ImpedimentoTarefa.IdImpedimento">
                        <p class="form-control-static">@Html.DisplayFor(x => x.ImpedimentoTarefa.Impedimento.Nome)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="ImpedimentoTarefa.Ativo"></label>
                    <div class="col-sm-10">
                        <div class="i-checks">
                            <label> <input type="checkbox" asp-for="ImpedimentoTarefa.Ativo" disabled="disabled"> <i></i> </label>
                        </div>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="ImpedimentoTarefa.DataInclusao"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="ImpedimentoTarefa.DataInclusao">
                        <p class="form-control-static">@Html.DisplayFor(x => x.ImpedimentoTarefa.DataInclusao)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <a class="btn btn-white" role="button" asp-page="Listar" asp-route-idTarefa="@Model.ImpedimentoTarefa.IdTarefa">Voltar</a>
                        <button class="btn btn-primary" type="submit">Remover</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>