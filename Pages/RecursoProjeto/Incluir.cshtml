@page "{idProjeto:int}"
@model dotnet_cpnucleo_pages.Pages.RecursoProjeto.IncluirModel
@{
    ViewData["Title"] = "Inclusão de Recurso (Projeto)";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>@ViewData["Title"]</h5>
            <div class="ibox-tools">
                <a class="fullscreen-link">
                    <i class="fa fa-expand"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <form method="post" class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="RecursoProjeto.IdProjeto"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="RecursoProjeto.IdProjeto" value="@Model.Projeto.IdProjeto">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Projeto.Nome)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="RecursoProjeto.IdRecurso"></label>
                    <div class="col-sm-10">
                        <select class="form-control m-b" asp-for="RecursoProjeto.IdRecurso" asp-items="@Model.SelectRecursos"></select>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <a class="btn btn-white" role="button" asp-page="Listar" asp-route-idProjeto="@Model.Projeto.IdProjeto">Voltar</a>
                        <button class="btn btn-primary" type="submit">Incluir</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>