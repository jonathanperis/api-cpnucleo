@page "{id:Guid}"

@model Tarefa.AlterarModel
@{
    ViewData["Title"] = "Alteração de Tarefa";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-filled">
            <div class="panel-heading">@ViewData["Title"]</div>
            <div class="panel-body">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Tarefa.Id"></label>
                        <input type="hidden" asp-for="Tarefa.Id">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Tarefa.Id)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="Tarefa.Nome"></label>
                        <input type="text" class="form-control" asp-for="Tarefa.Nome" placeholder="@Html.DisplayNameFor(x => x.Tarefa.Nome)">
                        <span class="help-block m-b-none">@Html.ValidationMessageFor(x => x.Tarefa.Nome)</span>
                    </div>

                    <!--IMPLEMENTAR DROPDOWN DE SISTEMA AQUI.-->
                    <div class="form-group">
                        <label asp-for="Tarefa.IdProjeto"></label>
                        <select class="form-control m-b" asp-for="Tarefa.IdProjeto" asp-items="Model.SelectProjetos"></select>
                    </div>

                    <div id="date-inicio" class="form-group">
                        <label asp-for="Tarefa.DataInicio"></label>
                        <input type="text" class="form-control" asp-for="Tarefa.DataInicio" placeholder="@Html.DisplayNameFor(x => x.Tarefa.DataInicio)" data-mask="99/99/9999">
                        <span class="help-block m-b-none">@Html.ValidationMessageFor(x => x.Tarefa.DataInicio)</span>
                    </div>

                    <div id="date-termino" class="form-group">
                        <label asp-for="Tarefa.DataTermino"></label>
                        <input type="text" class="form-control" asp-for="Tarefa.DataTermino" placeholder="@Html.DisplayNameFor(x => x.Tarefa.DataTermino)" data-mask="99/99/9999">
                        <span class="help-block m-b-none">@Html.ValidationMessageFor(x => x.Tarefa.DataTermino)</span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Tarefa.QtdHoras"></label>
                        <input type="text" class="form-control" asp-for="Tarefa.QtdHoras" placeholder="@Html.DisplayNameFor(x => x.Tarefa.QtdHoras)">
                        <span class="help-block m-b-none">@Html.ValidationMessageFor(x => x.Tarefa.QtdHoras)</span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Tarefa.Detalhe"></label>
                        <input type="text" class="form-control" asp-for="Tarefa.Detalhe" placeholder="@Html.DisplayNameFor(x => x.Tarefa.Detalhe)">
                        <span class="help-block m-b-none">@Html.ValidationMessageFor(x => x.Tarefa.Detalhe)</span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Tarefa.IdTipoTarefa"></label>
                        <select class="form-control m-b" asp-for="Tarefa.IdTipoTarefa" asp-items="Model.SelectTipoTarefas"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Tarefa.IdWorkflow"></label>
                        <select class="form-control m-b" asp-for="Tarefa.IdWorkflow" asp-items="Model.SelectWorkflows"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Tarefa.IdRecurso"></label>
                        <input type="hidden" asp-for="Tarefa.IdRecurso">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Tarefa.Recurso.Nome)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="Tarefa.DataInclusao"></label>
                        <input type="hidden" asp-for="Tarefa.DataInclusao">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Tarefa.DataInclusao)</p>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-default" role="button" asp-page="Listar">Voltar</a>
                        <button class="btn btn-accent" type="submit">Alterar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}