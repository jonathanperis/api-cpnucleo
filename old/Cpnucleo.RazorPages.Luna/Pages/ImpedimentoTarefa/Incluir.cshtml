@page "{idTarefa:Guid}"

@model ImpedimentoTarefa.IncluirModel
@{
    ViewData["Title"] = "Inclusão de Impedimento (Tarefa)";
}

@section Styles {
    <!-- iCheck -->
    <link href="~/css/plugins/iCheck/custom.css" rel="stylesheet">
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-filled">
            <div class="panel-heading">@ViewData["Title"]</div>
            <div class="panel-body">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="ImpedimentoTarefa.IdTarefa"></label>
                        <input type="hidden" asp-for="ImpedimentoTarefa.IdTarefa" value="@Model.Tarefa.Id">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Tarefa.Nome)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="ImpedimentoTarefa.Descricao"></label>
                        <input type="text" class="form-control" asp-for="ImpedimentoTarefa.Descricao" placeholder="@Html.DisplayNameFor(x => x.ImpedimentoTarefa.Descricao)">
                        <span class="help-block m-b-none">@Html.ValidationMessageFor(x => x.ImpedimentoTarefa.Descricao)</span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ImpedimentoTarefa.IdImpedimento"></label>
                        <select class="form-control m-b" asp-for="ImpedimentoTarefa.IdImpedimento" asp-items="Model.SelectImpedimentos"></select>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-default" role="button" asp-page="Listar" asp-route-idTarefa="@Model.Tarefa.Id">Voltar</a>
                        <button class="btn btn-accent" type="submit">Incluir</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}