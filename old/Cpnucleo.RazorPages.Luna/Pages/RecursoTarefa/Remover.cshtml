@page "{id:Guid}"

@model RecursoTarefa.RemoverModel
@{
    ViewData["Title"] = "Remoção de Recurso (Tarefa)";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-filled">
            <div class="panel-heading">@ViewData["Title"]</div>
            <div class="panel-body">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="RecursoTarefa.Id"></label>
                        <input type="hidden" asp-for="RecursoTarefa.Id">
                        <p class="form-control-static">@Html.DisplayFor(x => x.RecursoTarefa.Id)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="RecursoTarefa.IdTarefa"></label>
                        <input type="hidden" asp-for="RecursoTarefa.IdTarefa">
                        <p class="form-control-static">@Html.DisplayFor(x => x.RecursoTarefa.Tarefa.Nome)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="RecursoTarefa.IdRecurso"></label>
                        <input type="hidden" asp-for="RecursoTarefa.IdRecurso">
                        <p class="form-control-static">@Html.DisplayFor(x => x.RecursoTarefa.Recurso.Nome)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="RecursoTarefa.PercentualTarefa"></label>
                        <input type="hidden" asp-for="RecursoTarefa.PercentualTarefa">
                        <p class="form-control-static">@Html.DisplayFor(x => x.RecursoTarefa.PercentualTarefa)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="RecursoTarefa.DataInclusao"></label>
                        <input type="hidden" asp-for="RecursoTarefa.DataInclusao">
                        <p class="form-control-static">@Html.DisplayFor(x => x.RecursoTarefa.DataInclusao)</p>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-default" role="button" asp-page="Listar" asp-route-idTarefa="@Model.RecursoTarefa.IdTarefa">Voltar</a>
                        <button class="btn btn-accent" type="submit">Remover</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>