@page "{id:Guid}"

@model RecursoTarefa.AlterarModel
@{
    ViewData["Title"] = "Alteração de Recurso (Tarefa)";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-filled">
            <div class="panel-heading">@ViewData["Title"]</div>
            <div class="panel-body">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="RecursoTarefa.Id"></label>
                        <input type="hidden" asp-for="RecursoTarefa.Id">
                        <p class="form-control-static">@Html.DisplayFor(x => x.RecursoTarefa.Id)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="RecursoTarefa.IdTarefa"></label>
                        <input type="hidden" asp-for="RecursoTarefa.IdTarefa" value="@Model.RecursoTarefa.Tarefa.Id">
                        <p class="form-control-static">@Html.DisplayFor(x => x.RecursoTarefa.Tarefa.Nome)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="RecursoTarefa.IdRecurso"></label>
                        <select class="form-control m-b" asp-for="RecursoTarefa.IdRecurso" asp-items="Model.SelectRecursos"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="RecursoTarefa.PercentualTarefa"></label>
                        <input id="percentual-tarefa" type="text" class="form-control" asp-for="RecursoTarefa.PercentualTarefa" placeholder="@Html.DisplayNameFor(x => x.RecursoTarefa.PercentualTarefa)">
                        <span class="help-block m-b-none">@Html.ValidationMessageFor(x => x.RecursoTarefa.PercentualTarefa)</span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RecursoTarefa.DataInclusao"></label>
                        <input type="hidden" asp-for="RecursoTarefa.DataInclusao">
                        <p class="form-control-static">@Html.DisplayFor(x => x.RecursoTarefa.DataInclusao)</p>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-default" role="button" asp-page="Listar" asp-route-idTarefa="@Model.RecursoTarefa.IdTarefa">Voltar</a>
                        <button class="btn btn-accent" type="submit">Alterar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}