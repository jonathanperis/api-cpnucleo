@page "{id:Guid}"

@model Sistema.RemoverModel
@{
    ViewData["Title"] = "Remoção de Sistema";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-filled">
            <div class="panel-heading">@ViewData["Title"]</div>
            <div class="panel-body">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Sistema.Id"></label>
                        <input type="hidden" asp-for="Sistema.Id">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Sistema.Id)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="Sistema.Nome"></label>
                        <input type="hidden" asp-for="Sistema.Nome">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Sistema.Nome)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="Sistema.Descricao"></label>
                        <input type="hidden" asp-for="Sistema.Descricao">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Sistema.Descricao)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="Sistema.DataInclusao"></label>
                        <input type="hidden" asp-for="Sistema.DataInclusao">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Sistema.DataInclusao)</p>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-default" role="button" asp-page="./Listar">Voltar</a>
                        <button class="btn btn-accent" type="submit">Remover</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>