@page "{id:Guid}"

@model Projeto.RemoverModel
@{
    ViewData["Title"] = "Remoção de Projeto";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-filled">
            <div class="panel-heading">@ViewData["Title"]</div>
            <div class="panel-body">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Projeto.Id"></label>
                        <input type="hidden" asp-for="Projeto.Id">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Projeto.Id)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="Projeto.Nome"></label>
                        <input type="hidden" asp-for="Projeto.Nome">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Projeto.Nome)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="Projeto.IdSistema"></label>
                        <input type="hidden" asp-for="Projeto.IdSistema">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Projeto.Sistema.Nome)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="Projeto.DataInclusao"></label>
                        <input type="hidden" asp-for="Projeto.DataInclusao">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Projeto.DataInclusao)</p>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-default" role="button" asp-Page="Listar">Voltar</a>
                        <button class="btn btn-accent" type="submit">Remover</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>