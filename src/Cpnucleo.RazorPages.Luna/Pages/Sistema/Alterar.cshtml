@page "{id:Guid}"

@model Sistema.AlterarModel
@{
    ViewData["Title"] = "Alteração de Sistema";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-filled">
            <div class="panel-heading">@ViewData["Title"]</div>
            <div class="panel-body">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Sistema.Id"></label>
                        <input type="hidden" asp-for="Sistema.Id">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Sistema.Id)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="Sistema.Nome"></label>
                        <input type="text" class="form-control" asp-for="Sistema.Nome" placeholder="@Html.DisplayNameFor(x => x.Sistema.Nome)">
                        <span class="help-block m-b-none">@Html.ValidationMessageFor(x => x.Sistema.Nome)</span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Sistema.Descricao"></label>
                        <input type="text" class="form-control" asp-for="Sistema.Descricao" placeholder="@Html.DisplayNameFor(x => x.Sistema.Descricao)">
                        <span class="help-block m-b-none">@Html.ValidationMessageFor(x => x.Sistema.Descricao)</span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Sistema.DataInclusao"></label>
                        <input type="hidden" asp-for="Sistema.DataInclusao">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Sistema.DataInclusao)</p>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-default" role="button" asp-page="./Listar">Voltar</a>
                        <button class="btn btn-accent" type="submit">Alterar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}