@page "{idProjeto:Guid}"

@model RecursoProjeto.IncluirModel
@{
    ViewData["Title"] = "Inclusão de Recurso (Projeto)";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-filled">
            <div class="panel-heading">@ViewData["Title"]</div>
            <div class="panel-body">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="RecursoProjeto.IdProjeto"></label>
                        <input type="hidden" asp-for="RecursoProjeto.IdProjeto" value="@Model.Projeto.Id">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Projeto.Nome)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="RecursoProjeto.IdRecurso"></label>
                        <select class="form-control m-b" asp-for="RecursoProjeto.IdRecurso" asp-items="Model.SelectRecursos"></select>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-default" role="button" asp-page="Listar" asp-route-idProjeto="@Model.Projeto.Id">Voltar</a>
                        <button class="btn btn-accent" type="submit">Incluir</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}