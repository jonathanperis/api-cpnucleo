@page "{id:Guid}"

@model Recurso.RemoverModel
@{
    ViewData["Title"] = "Remoção de Recurso";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-filled">
            <div class="panel-heading">@ViewData["Title"]</div>
            <div class="panel-body">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Recurso.Id"></label>
                        <input type="hidden" asp-for="Recurso.Id">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Recurso.Id)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="Recurso.Nome"></label>
                        <input type="hidden" asp-for="Recurso.Nome">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Recurso.Nome)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="Recurso.Login"></label>
                        <input type="hidden" asp-for="Recurso.Login">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Recurso.Login)</p>
                    </div>

                    <div class="form-group">
                        <label asp-for="Recurso.DataInclusao"></label>
                        <input type="hidden" asp-for="Recurso.DataInclusao">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Recurso.DataInclusao)</p>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-default" role="button" asp-page="Listar">Voltar</a>
                        <button class="btn btn-accent" type="submit">Remover</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>