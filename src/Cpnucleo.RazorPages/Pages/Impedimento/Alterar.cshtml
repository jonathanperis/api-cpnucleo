@page "{idImpedimento:int}"

@ViewModel Impedimento.AlterarModel
@{
    ViewData["Title"] = "Alteração de Impedimento";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>@ViewData["Title"]</h5>
            <div class="ibox-tools">
                <a class="fullscreen-link">
                    <i class="fa fa-expand"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <form method="post" class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Impedimento.IdImpedimento"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Impedimento.IdImpedimento">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Impedimento.IdImpedimento)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Impedimento.Nome"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Impedimento.Nome" placeholder="@Html.DisplayNameFor(x => x.Impedimento.Nome)">
                        <span class="help-block m-b-none">@Html.ValidationMessageFor(x => x.Impedimento.Nome)</span>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Impedimento.DataInclusao"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Impedimento.DataInclusao">
                        <p class="form-control-static">@Html.DisplayFor(x => x.Impedimento.DataInclusao)</p>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <a class="btn btn-white" role="button" asp-page="Listar">Voltar</a>
                        <button class="btn btn-primary" type="submit">Alterar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ Html.RenderPartial("_ValidationScriptsPartial"); }
}